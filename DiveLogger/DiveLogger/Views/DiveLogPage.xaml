    <ContentPage.ToolbarItems>
        <ToolbarItem Name="menuSave" Order="Primary"  Text="Save Log" Priority="0" />
       
    </ContentPage.ToolbarItems>
    <ScrollView>
        <TableView Intent="Form" HasUnevenRows="True">
            <TableRoot>
                <TableSection Title="Dive Details" >
                    <ViewCell>
                        <Grid HorizontalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="Dive Number:" HorizontalOptions="StartAndExpand"></Label>
                            <Entry Grid.Column="1" HorizontalOptions="FillAndExpand"/>
                        </Grid>

                    </ViewCell>
                    <ViewCell>
                        <Grid HorizontalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="Visibility:" HorizontalOptions="StartAndExpand"></Label>
                            <Entry Grid.Column="1" HorizontalOptions="FillAndExpand"/>
                        </Grid>

                    </ViewCell>
                    <ViewCell>
                        <Grid HorizontalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="Max Depth:" HorizontalOptions="StartAndExpand"></Label>
                            <Entry Grid.Column="1" HorizontalOptions="FillAndExpand"/>
                        </Grid>

                    </ViewCell>
                    <ViewCell>
                        <Grid HorizontalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="Duration:" HorizontalOptions="StartAndExpand"></Label>
                            <Entry Grid.Column="1" HorizontalOptions="FillAndExpand"/>
                        </Grid>

                    </ViewCell>
                    <ViewCell>
                        <Grid HorizontalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="Temperature:" HorizontalOptions="StartAndExpand"></Label>
                            <Entry Grid.Column="1" HorizontalOptions="FillAndExpand"/>
                        </Grid>

                    </ViewCell>
                    <ViewCell>
                        <Grid HorizontalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="Location:" HorizontalOptions="StartAndExpand"></Label>
                            <Entry Grid.Column="1" HorizontalOptions="FillAndExpand"/>
                        </Grid>
                        
                    </ViewCell>
                    </TableSection>
                <TableSection Title="Dive Notes">
                    <ViewCell >
                        <Frame BorderColor="Blue" HasShadow="True" Padding="3">
                                <Editor Grid.Row="1" HeightRequest="150" VerticalOptions="Fill" BackgroundColor="DimGray">
                                </Editor>
                        </Frame>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ScrollView>
